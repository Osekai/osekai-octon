@page "/home"
@using Osekai.Octon.Localization
@using Osekai.Octon.WebServer.Helpers
@model Osekai.Octon.WebServer.Pages.Home

@{
    Layout = "AppBaseLayout";
}

@section AppHeadExtension
{
    @await Html.PartialAsync("Partials/Fonts")
    @await Html.PartialAsync("Partials/Stylesheets")
    @await Html.PartialAsync("Partials/Lottie")
}

@{
    ILocalizator localizator = Model.CurrentLocale.Localizator;
}

<div class="osekai__panel-container nopadding home__loader-wait" id="home">
    <!-- <div class="home__warning-bar">
        This is an experimental new style for the Osekai Homepage. What you're seeing is <del>very early in development.</del> almost done!
    </div> -->

    <div class="home__cover" onload="positionNav();">
        <div class="home__cover-background">
            <img src="/home/img/background.png">
        </div>
        <div class="home__cover-middle">
            <div class="home__cover-middle-logo">
                <!-- <img src="img/osekai.svg" class="home__logo"> -->
                <lottie-player class="home__logo-lottie" id="player" src="/home/img/osekai-logo.json" background="transparent" speed="1" style="height: 300px; margin: -90px 0px;"></lottie-player>
            </div>
            <p>@Html.Raw(await localizator.GetStringAsync("home.cover.subtitle"))</p>
        </div>
        <div class="home__cover-bottom">
            <svg width="24" height="23" viewBox="0 0 24 23" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path opacity="0.8" d="M3 0C2.20435 0 1.44129 0.316071 0.87868 0.87868C0.316071 1.44129 0 2.20435 0 3L0 15C0 15.7956 0.316071 16.5587 0.87868 17.1213C1.44129 17.6839 2.20435 18 3 18H6.75C6.98287 18 7.21254 18.0542 7.42082 18.1584C7.6291 18.2625 7.81028 18.4137 7.95 18.6L10.8 22.3995C10.9397 22.5858 11.1209 22.737 11.3292 22.8411C11.5375 22.9453 11.7671 22.9995 12 22.9995C12.2329 22.9995 12.4625 22.9453 12.6708 22.8411C12.8791 22.737 13.0603 22.5858 13.2 22.3995L16.05 18.6C16.1897 18.4137 16.3709 18.2625 16.5792 18.1584C16.7875 18.0542 17.0171 18 17.25 18H21C21.7956 18 22.5587 17.6839 23.1213 17.1213C23.6839 16.5587 24 15.7956 24 15V3C24 2.20435 23.6839 1.44129 23.1213 0.87868C22.5587 0.316071 21.7956 0 21 0L3 0ZM12 5.9895C14.496 3.423 20.7375 7.914 12 13.6875C3.2625 7.9125 9.504 3.423 12 5.9895Z" fill="white" />
            </svg>
            <p>@Html.Raw(await localizator.GetStringAsync("home.cover.madeFor"))</p>
        </div>
        <div class="home__cover-arrow" onclick="ScrollDown()">
            <i class="fas fa-chevron-down"></i>
        </div>
    </div>
    <div class="home__panel-container">
        <a class="home__panel home__panel-hoverable" style="--paccent: 45, 59, 90; --paccent-bright: 102, 143, 255;" href="/profiles">
            <img class="home__panel-img" src="/home/img/profiles.png">
            <div class="home__panel-inner">
                <div class="home__vertical-glowbar"></div>
                <div class="home__panel-inner-texts">
                    <div class="home__new">
                        <div class="home__new-badge">@Html.Raw(await localizator.GetStringAsync("home.new"))</div>
                        <p>@Html.Raw(await localizator.GetStringAsync("home.new.text"))</p>
                    </div>
                    <h3>@Html.Raw(await localizator.GetStringAsync("home.new.introducing"))</h3>
                    <h1>Osekai <strong>Profiles</strong></h1>
                    <div class="home__horizontal-glowbar"></div>
                    <p class="home__app-text">@Html.Raw(await localizator.GetStringAsync("home.profiles.main"))</p>
                </div>
            </div>
        </a>
        <div class="home__panel-row2">
            <a class="home__panel home__panel-hoverable home__panel_vertical" style="--paccent: 102, 34, 68; --paccent-bright: 255, 102, 170;" href="/medals">
                <img class="home__panel-img" src="/home/img/medals.png">
                <div class="home__panel-inner">
                    <div class="home__vertical-glowbar"></div>
                    <div class="home__panel-inner-texts">
                        <h1>Osekai <strong>Medals</strong></h1>
                        <p class="home__app-text">@Html.Raw(await localizator.GetStringAsync("home.medals.main"))</p>
                    </div>
                </div>
            </a>
            <a class="home__panel home__panel-hoverable home__panel_vertical" style="--paccent: 38, 44, 124; --paccent-bright: 63, 77, 245;" href="/snapshots">
                <img class="home__panel-img" src="/home/img/snapshots.png">
                <div class="home__panel-inner">
                    <div class="home__vertical-glowbar"></div>
                    <div class="home__panel-inner-texts">
                        <h1>Osekai <strong>Snapshots</strong></h1>
                        <p class="home__app-text">@Html.Raw(await localizator.GetStringAsync("home.snapshots.main"))</p>
                    </div>
                </div>
            </a>
        </div>
        <a class="home__long-panel home__panel-hoverable" style="--paccent: 0, 0, 0; --paccent-bright: 167, 218, 245; background-image: url('/home/img/medalhunters-bg.png');" href="https://discord.gg/8qpNTs6">
            <div class="home__vertical-glowbar"></div>
            <img class="home__long-img" src="/home/img/medalhunters-logo.png" style="transform: scale(1.3);">
            <div class="home__long-texts">
                <h1>@Html.Raw(await localizator.GetStringAsync("home.discord.title"))</h1>
                <p>@Html.Raw(await localizator.GetStringAsync("home.discord.text"))</p>
            </div>
        </a>
        <div class="home__panel-row2">
            <a class="home__panel home__panel-hoverable home__panel_vertical" style="--paccent: 0, 66, 79; --paccent-bright: 0, 194, 224;" href="/rankings">
                <img class="home__panel-img" src="/home/img/rankings.png">
                <div class="home__panel-inner">
                    <div class="home__vertical-glowbar"></div>
                    <div class="home__panel-inner-texts">
                        <h1>Osekai <strong>Rankings</strong></h1>
                        <p class="home__app-text">@Html.Raw(await localizator.GetStringAsync("home.rankings.main"))</p>
                    </div>
                </div>
            </a>
            <a class="home__panel home__panel-hoverable home__panel_vertical" style="--paccent: 89,62,110; --paccent-bright: 170,102,255;" href="/badges">
                <img class="home__panel-img" src="/home/img/badges.png">
                <div class="home__panel-inner">
                    <div class="home__vertical-glowbar"></div>
                    <div class="home__panel-inner-texts">
                        <h1>Osekai <strong>Badges</strong></h1>
                        <p class="home__app-text">@Html.Raw(await localizator.GetStringAsync("home.badges.main"))</p>
                    </div>
                </div>
            </a>
        </div>
        <a class="home__long-panel home__panel-hoverable" style="--paccent: 0, 0, 0; --paccent-bright: 237, 132, 213; background-image: url('/home/img/support.png');" href="/donate">
            <div class="home__vertical-glowbar"></div>
            <img class="home__long-img" src="/home/img/heart.svg" style="transform: scale(0.8);">
            <div class="home__long-texts">
                <h1>@Html.Raw(await localizator.GetStringAsync("home.support.title"))</h1>
                <p>@Html.Raw(await localizator.GetStringAsync("home.support.text"))</p>
            </div>
        </a>
        <div class="home__panel home__faq">
            <div class="home__faq-questions-list">
                <h1>@Html.Raw(await localizator.GetStringAsync("home.faq"))</h1>
                <h3>@Html.Raw(await localizator.GetStringAsync("home.faq.title"))</h3>
                <div id="home__faq-list" class="home__faq-questions-list-inner"></div>
            </div>
            <div class="home__faq-answer">
                <h1 id="home__faq-answer-title" class="home__faq-answer-title">@Html.Raw(await localizator.GetStringAsync("home.faq.welcome"))</h1>
                <div id="home__faq-answer-answer" class="home__faq-answer-answer">@Html.Raw(await localizator.GetStringAsync("home.faq.welcome.intro"))</div>
            </div>
        </div>
        <div class="home__panel home__team">
            <h1>@Html.Raw(await localizator.GetStringAsync("home.team.title"))</h1>
            <div class="home__team-grid" id="team_grid">
            </div>
        </div>
    </div>
</div>
<script src="@StringWithVersionQueryHtmlContent.Create("/home/js/main.js")"></script>
<img src="/home/img/background.png" onload="positionNav();" style="display: none;">
<script>
    //document.getElementById("home").classList.remove('home__loader-wait')
    document.addEventListener('DOMContentLoaded', function() {
        setTimeout(() => {
            document.getElementById("home").classList.remove('home__loader-wait')
            setTimeout(() => {
                document.getElementById("player").play();
            }, 400);
        }, 1000);
    });
</script>
<script>
    positionNav();
</script>